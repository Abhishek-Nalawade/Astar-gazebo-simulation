<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="x_pos" default="3.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="start_orientation" default="0"/>
  <arg name="z_pos" default="0.0"/>

  <arg name="x_goal_pos" default="0"/>
  <arg name="y_goal_pos" default="3"/>
  <arg name="goal_orientation" default="0"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find phase3)/map.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -Y $(arg start_orientation) -param robot_description" />

  <node pkg = "phase3"
        type = "Simulate.py"
        name = "talker"
	args = "$(arg x_pos) $(arg y_pos) $(arg start_orientation) $(arg x_goal_pos) $(arg y_goal_pos) $(arg goal_orientation)"
        output = "screen"/>
</launch>
